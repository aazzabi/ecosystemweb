{% extends './Default/dashboard.html.twig' %}
{% block title %}
    Liste des Categories d'event
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var categorieTable = $('#categoriesTab').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
            var evtsTable = $('#evtsTab').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Liste des Catégories d'events</b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="{{ path('da_categorie_new') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i> &nbsp;Ajouter une catégorie
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">
                <ul class="nav nav-tabs nav-tabs-simple hidden-sm-down" role="tablist"
                    data-init-reponsive-tabs="dropdownfx">
                    <li class="nav-item">
                        <a class="active" data-toggle="tab" role="tab" data-target="#evts" href="#"
                           aria-expanded="true">Evénements</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" data-toggle="tab" role="tab" data-target="#categories" class=""
                           aria-expanded="false">Catégories</a>
                    </li>
                </ul>
                <div class="tab-content" >
                    <div class="tab-pane active" id="evts" aria-expanded="true">
                        <table id="evtsTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Categorie</th>
                                    <th>Lieu</th>
                                    <th>Date</th>
                                    <th>Cree Par</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <thead>
                                <tbody>
                                {% for evenement in evenements %}
                                    <tr class="event">

                                        <td>
                                            {{ evenement.titre }}
                                        </td>
                                        <td>{{ evenement.description }}</td>
                                        <td>{{ evenement.categorie.libelle }}</td>
                                        <td>{{ evenement.lieu }}</td>
                                        <td>{{ evenement.date |date }}</td>
                                        <td>{{ evenement.createdBy }}</td>

                                        <td>

                                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                                <a  href="{{ path('da_evenement_show', { 'id': evenement.id }) }}" class="btn btn-default"

                                                    data-toggle="tooltip" title="Voir">
                                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                                </a>
                                            </div>

                                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                                <a href="{{ path('da_evenements_delete', { 'id': evenement.id }) }}" class="btn btn-danger"
                                                   data-toggle="tooltip" title="Supprimer">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </a>
                                            </div>

                                        </td>
                                        </a>
                                    </tr>

                                {% endfor %}
                                </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="categories" aria-expanded="false">
                        <table id="categoriesTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Libelle</th>
                                    <th>But</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <thead>
                            <tbody>
                            {% for categoriesEvt in categoriesEvts %}
                                <tr>

                                    <td>
                                        <a href="{{ path('da_categorie_show', { 'id': categoriesEvt.id }) }}">{{ categoriesEvt.libelle }}</a>
                                    </td>
                                    <td>{{ categoriesEvt.but }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('da_categorie_edit', { 'id': categoriesEvt.id }) }}"
                                               data-toggle="tooltip" title="Editer l'utilisateur">
                                                <i class="fa fa-pencil-square-o"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
