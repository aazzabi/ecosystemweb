{% extends './Default/dashboard.html.twig' %}
{% block title %}
    Liste des events
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var users = $('#categorieTab').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Liste des events</b></h1>
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <table id="categorieTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Categorie</th>
                    <th>Lieu</th>

                    <th>Cree Par</th>
                    <th>Action</th>
                </tr>
                </thead>
                <thead>
                <tbody>
                {% for evenement in evenement %}
                    <tr>

                        <td>
                           {{ evenement.titre }}
                        </td>
                        <td>{{ evenement.description }}</td>
                        <td>{{ evenement.categorie.libelle }}</td>
                        <td>{{ evenement.lieu }}</td>

                        <td>{{ evenement.createdBy }}</td>

                        <td>
                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a class="btn btn-secondary"

                                   data-toggle="tooltip" title="Promouvoir">
                                    <i class="fa fa-pencil-square-o"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </div>


{% endblock %}
