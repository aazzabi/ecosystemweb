{% extends './Default/dashboard.html.twig' %}

{% block title %}
    Dashboard Admin Forum
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
    <style>
        #group-img {
            width: 55px !important;
            padding: 0;
        }
        #group-img img {
            width: 55px !important;
        }

    </style>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var tableS = $('#categoriesTab').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
        });
    </script>


{% endblock %}

{% block body %}

    {#Profiles liste et buttons#}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="{{ path('da_forum_new') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="clearfix">
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">
                <ul class="nav nav-tabs nav-tabs-simple hidden-sm-down" role="tablist"
                    data-init-reponsive-tabs="dropdownfx">
                    <li class="nav-item">
                        <a class="active" data-toggle="tab" role="tab" data-target="#publications" href="#"
                           aria-expanded="true">Publications / Articles</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" data-toggle="tab" role="tab" data-target="#categories" class=""
                           aria-expanded="false">Categories</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="publications" aria-expanded="true">
                        tableau des publications
                    </div>
                    <div class="tab-pane" id="categories" aria-expanded="false">
                        <table id="categoriesTab" class="table table-striped table-bordered" style="width: 100% !important;">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Libell√©</th>
                                <th>Description</th>
                                <th>Domaine</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <td>{{ categorie.id }}</td>
                                    <td>{{ categorie.libelle }}</td>
                                    <td>{{ categorie.description }}</td>
                                    <td>{{ categorie.domaine }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary" href="{{ path('da_categorie_pub_show', { 'id': categorie.id }) }}"
                                               data-toggle="tooltip" title="Afficher le profile">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a class="btn btn-secondary" href="{{ path('da_categorie_pub_edit', { 'id': categorie.id }) }}"
                                               data-toggle="tooltip" title="Editer le profile">
                                                <i class="fa fa-pencil-square-o"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
