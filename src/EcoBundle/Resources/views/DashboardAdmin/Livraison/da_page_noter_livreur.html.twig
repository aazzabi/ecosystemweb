{% extends './Default/dashboard.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
    <link rel="stylesheet"  href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css">
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var users = $('#cmd').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });

        });
    </script>
{% endblock %}

{% block body %}
    {% if livreur|length >0 %}
        <h1> Liste des Livreurs :</h1>
        <p></p>
        <a class="btn btn-success" data-target="#mo" data-toggle="modal">
            <i class="fas fa-trophy fa-1x"></i>
            Meilleur Livreur
            </i>
        </a>
        <div class="tab-content" >
            <div class="tab-pane active" id="users" aria-expanded="true">
                <table id="cmd" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th> Nom Prénom  </th>
                        <th> Nombre de Livraisons </th>
                        <th> Note </th>
                        <th> Action </th>

                    </tr>
                    {% for value in livreur %}

                    <tbody>
                    <tr>
                        <td>{{ value.nom }} {{ value.prenom }} </td>

                        <td>{{ value.nbrLivraison }}</td>
                        <td>

                        {% if value.note==0 %}
                            Note par défaut 0
                            {% elseif value.note==1 %}
                                <i class="fas fa-star" style="color: #0aa699"></i>
                            {% elseif value.note==2 %}
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                            {% elseif value.note==3 %}
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                            {% elseif value.note==4 %}
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                            {% elseif value.note==5 %}
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                                <i class="fas fa-star" style="color: #0aa699"></i>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('noter_livreur', { 'note': 1 ,'id_l': value.id }) }}">
                            <i class="fas fa-star" style="color: #0aa699"></i> </br>
                            </a>

                            <a href="{{ path('noter_livreur', { 'note': 2 ,'id_l': value.id }) }}">
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i></br>
                            </a>

                            <a href="{{ path('noter_livreur', { 'note': 3 ,'id_l': value.id }) }}">
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i></br>
                            </a>

                            <a href="{{ path('noter_livreur', { 'note': 4 ,'id_l': value.id }) }}">
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i></br>
                            </a>

                            <a href="{{ path('noter_livreur', { 'note': 5 ,'id_l': value.id }) }}">
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i>
                            <i class="fas fa-star" style="color: #0aa699"></i></br>
                            </a>

                        </td>
                    </tr>
                    </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>

        {% for value in livreur %}
{% if value.note==5 %}

            <!-- Modal DETAIL REP -->
            <div class="modal fade " id="mo" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <center><h1 class="modal-title" id=""> Meilleur Livreur </h1></center>
                            <center><img src="{{ asset('assets/img/icon_bronze.png') }}" width="10" height="10"></center>
                            <img style="width: 100%;height: 350px" src="{{ asset('uploads/user/photo/' ~ value.photo) }}" alt="*">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">

                            <input name="id" value="" style="display: none">
                            <center><h1 class="h1">Nom & Prénom </h1></center>
                            <center><p>  </p>{{ value.nom }} {{ value.prenom }}</center>
                            <center><h1 class="h1">Zone de Travail  </h1></center>
                            <center> <p>   {{ value.zone }}</p></center>

                            <center><h1 class="h1"> Note</h1></center>
                            <center> <p>  <i class="fas fa-star" style="color: #0aa699"></i>
                                    <i class="fas fa-star" style="color: #0aa699"></i>
                                    <i class="fas fa-star" style="color: #0aa699"></i>
                                    <i class="fas fa-star" style="color: #0aa699"></i>
                                    <i class="fas fa-star" style="color: #0aa699"></i>
                                </p></center>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>

                        </div>


                    </div>
                </div>
            </div>



{% endif %}
        {% endfor %}

    {% else %}
        <h1> Il n'ya pas de livreurs </h1>
    {% endif %}

{% endblock %}