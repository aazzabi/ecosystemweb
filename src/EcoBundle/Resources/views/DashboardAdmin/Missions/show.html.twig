{% extends './Default/dashboard.html.twig' %}

{% block title %}
    Affichage d'une catégorie
{% endblock %}

{% block body %}
    <h1>Catégorie des Missions</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">
                <ul class="nav nav-tabs nav-tabs-simple hidden-sm-down" role="tablist"
                    data-init-reponsive-tabs="dropdownfx">

                    <li class="nav-item">
                        <a href="#" data-toggle="tab" role="tab" data-target="#association" class=""
                           aria-expanded="false">Société</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="societe" aria-expanded="true">
                        <table id="societesTab" class="table table-striped table-bordered" style="width: 100% !important;">

                            <tbody>

                            <tr>

                            <tr>
                                <th>Id</th>
                                <td>{{ CategorieMission.id }}</td>
                            </tr>
                            <tr>
                                <th>Libelle</th>
                                <td>{{ CategorieMission.libelle }}</td>
                            </tr>
                            <tr>
                                <th>But</th>
                                <td>{{ CategorieMission.but }}</td>
                            </tr>
                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a class="btn btn-secondary" href="{{path ('da_categoriem_index') }}"
                                   data-toggle="tooltip" title="Back to the list">
                                    <i class="fa fa-eye"></i>

                                </a>
                                <a class="btn btn-secondary" href="{{ path('da_categoriem_edit', { 'id': CategorieMission.id }) }}"
                                   data-toggle="tooltip" title="Editer la categorie">
                                    <i class="fa fa-pencil-square-o"></i>
                                </a>
                                <li>

                                    <button type="button" class="btn btn-danger btn_lg" data-toggle="modal" data-target="#myModal">
                                        <i class="fa fa-times" aria-hidden="true"></i> Supprimer
                                    </button>
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                         aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel"> Supprimer
                                                    </h5>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez-vous vraiement supprimer cette categorie?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Annuler
                                                    </button>

                                                    <a href="{{ path('da_evenements_delete', { 'id': CategorieMission.id }) }}">
                                                        <input class="btn btn-danger btn_lg" type="submit" value="Supprimer">
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </div>
                            </td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
