{% extends './Default/dashboard.html.twig' %}
{% block title %}
    Liste de mes évenments
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var users = $('#categorieTab').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Mes évenements</b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="{{ path('du_evenements_new') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter un évènement
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <table id="categorieTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Categorie</th>
                    <th>Lieu</th>
                    <th>Date</th>
                    <th>Cree Par</th>
                    <th>Action</th>
                </tr>
                </thead>
                <thead>
                <tbody>
                {% for evenement in evenements %}
                    <tr>

                        <td>{{ evenement.titre }}</td>
                        <td>{{ evenement.description }}</td>
                        <td>{{ evenement.categorie.libelle }}</td>
                        <td>{{ evenement.lieu }}</td>
                        <td>{{ evenement.date |date }}</td>
                        <td>{{ evenement.createdBy }}</td>

                        <td>
                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a class="btn btn-secondary"
                                   href="{{ path('du_evenement_edit', { 'id': evenement.id }) }}"
                                   data-toggle="tooltip" title="Editer l'utilisateur">
                                    <i class="fa fa-pencil-square-o"></i>
                                </a>
                            </div>

                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a href="{{ path('du_evenements_delete', { 'id': evenement.id }) }}" class="btn btn-danger"
                                   data-toggle="tooltip" title="Supprimer">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </div>

                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a href="{{ path('du_evenements_show', { 'id': evenement.id }) }}" class="btn btn-default"
                                   data-toggle="tooltip" title="Voir">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </div>


{% endblock %}
