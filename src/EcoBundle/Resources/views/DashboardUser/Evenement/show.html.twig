                            <div class="btn-group btn-group-sm btn-group-horizontal">
                                <a class="btn btn-secondary" href="{{ path ('du_evenements_index') }}"
                                   data-toggle="tooltip" title="Back to the list">
                                    <i class="fa fa-eye"></i>

                                </a>

                                <li>
                                    {{ form_start(delete_form) }}

                                    <button type="button" class="btn btn-danger btn_lg" data-toggle="modal"
                                            data-target="#myModal">
                                        <i class="fa fa-times" aria-hidden="true"></i> Supprimer
                                    </button>
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
                                         aria-labelledby="exampleModalLabel"
                                         aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel"> Supprimer
                                                    </h5>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez-vous vraiement supprimer cette categorie?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default btn-secondary"
                                                            data-dismiss="modal"> Annuler
                                                    </button>

                                                    <input class="btn btn-danger btn_lg" type="submit"
                                                           value="Supprimer">
