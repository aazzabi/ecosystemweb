{% extends './Default/dashboard.html.twig' %}

{% block title %}
    Affichage d'un Event
{% endblock %}
{% block stylesheets %}
<style>
    .jumbotron {
        height: 40vh;
        padding: 0px;
        width: 100%;
    }
</style>
{% endblock %}
{% block body %}
    <div class="jumbotron" data-social="cover" data-pages="parallax" data-scroll-element=".page-container">
        <div class="cover-photo" style="background-image:url('{{ asset('bundles/appbundle/images/top_bg.jpg') }}'); transform: translateY(0px);">
        {% if evenement.cover != '' %}
            <img alt="User Pic"
                 src="{{ asset('uploads/evt/cover/' ~ evenement.cover) }}"
                 class="img-circle img-responsive">
        {% else %}
            <img alt="User Pic" src="{{ asset('assets/img/profile.png') }}"
                 id="profile-image1" class="img-circle img-responsive">
        {% endif %}
        </div>
        <div class=" container    container-fixed-lg sm-p-l-0 sm-p-r-0">
            <div class="inner" style="transform: translateY(0px); opacity: 1;">
                <div class="pull-bottom bottom-left m-b-40 sm-p-l-15">
                    <h5 class="text-white no-margin">welcome to pages social</h5>
                    <h1 class="text-white no-margin"><span class="semi-bold">social</span> cover</h1>
                </div>
            </div>
        </div>
    </div>

    <h1> Event</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">
                <ul class="nav nav-tabs nav-tabs-simple hidden-sm-down" role="tablist"
                    data-init-reponsive-tabs="dropdownfx">

                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="societe" aria-expanded="true">
                        <table id="societesTab" class="table table-striped table-bordered"
                               style="width: 100% !important;">
                            <tbody>
                            <tr>
                                <th><i class="fas fa-info-circle" aria-hidden=true"></i></th>
                                <td>{{ evenement.description }}</td>
                            </tr>

                            <tr>
                                <th> <i class="fa fa-map-marker" aria-hidden="true"></i></th>
                                <td>{{ evenement.lieu }}</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-calendar" aria-hidden="true"></i></th>
                                <td>{{ evenement.date |date }}</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-user" aria-hidden="true"></i></th>
                                <td>{{ evenement.createdBy }}</td>
                            </tr>


