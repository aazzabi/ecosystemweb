<div class="card gedf-card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="posts-tab" data-toggle="tab"
                   href="#posts" role="tab" aria-controls="posts" aria-selected="true">Commenter !!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">Images</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                <div class="form-group" style="padding-left: 10px;">
                    <label class="sr-only" for="message">post</label>
                    {{ form_widget(commentaireForm.description, {'attr': {'class': 'form-control', 'placeholder': "Votre commentaire"} }) }}
                    <br>
                </div>
            </div>
            <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                <div class="form-group">
                    <div class="custom-file">
                        {{ form_widget(commentaireForm.commentairePhoto, {'class':'custom-file-input', 'id': 'customFile' }) }}
                        {#<label class="custom-file-label" for="customFile">Upload image</label>#}
                        {#<input type="file" accept="image/*"  onchange="showMyImage(this)" />#}
                        <input class="custom-file-input" type="file" onchange="showMyImage(this)"
                               placeholder="You can drag and drop image here !"
                               id="ecobundle_commentairepublication_commentairePhoto_file"
                               name="ecobundle_commentairepublication[commentairePhoto][file]">
                        <img id="thumbnil" style="width:20%; margin-top:10px;"  src="" alt="image"/>
                    </div>
                </div>
                <div class="py-4"></div>
            </div>
            <button type="submit" class="btn btn-success" style="margin: 25px;">Commenter</button>

        </div>
    </div>
</div>
{#{% form_theme commentaireForm 'bootstrap_3_layout.html.twig' %}#}


