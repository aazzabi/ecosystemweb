{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .page-container {
            background-image: url('{{ asset('assets/img/background_commande2.jpg') }}') !important;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function () {
        var panier = $('#commande').DataTable({
            "paging": true,
            "stateSave": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
            }
        });
    });
</script>
{% endblock %}
{% block head %}
    <link rel="stylesheet"  href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css">
{% endblock %}
{% block body %}

    {% if commandes|length >0 %}
        <h1 style="color: white"> Mes Commandes : </h1>
    <div class="tab-content" >
        <div class="tab-pane active" id="users" aria-expanded="true">

                <table id="commande" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th style="color: white"> Date Emission </th>
                        <th style="color: white"> Etat </th>
                        <th style="color: white"> Prix Total </th>
                        <th style="color: white"> Détails </th>

                    </tr>
                    <tbody>
                    {% for value in commandes %}
                        {% if app.user.id == value.idUtilisateur %}
                        <tr>

                            <td>{{ value.dateEmission|date}}</td>
                            <td>{{ value.etatCommande }}

                                {% if value.etatCommande=='En cours' %}
                                    <i class="fa fa-spinner fa-2x fa-pulse " style="color: #0da899"></i>
                                {% endif %}
                                {% if value.etatCommande=='Effectué' %}
                                    <i class="fas fa-check fa-2x " style="color: #0da899"></i>
                                {% endif %}
                            </td>
                            <td style="color: #0f3e68" > <h3>{{ value.prixTotal }} DT </h3></td>
                            <td>

                                <a  href="{{ path('ligne_show',{ 'id_c': value.id  }) }}">Afficher les détails </a> </br>
                                <a  href="{{ path('annuler_commande',{ 'id_c': value.id  }) }}">Annuler Commande </a> </br>
                                <a  href="{{ path('ajout_livraison',{ 'id_c': value.id ,'id_u': app.user.id,'nom_prop': app.user.nomPropriete,'rue_u': app.user.rue,'ville_u': app.user.ville}) }}" >Demander Livraison </a> </td>

                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>

                </table>
        </div>
    </div>
    {% else %}
        <h1> Vous n'avez pas de commandes </h1>
    {% endif %}
{% endblock %}