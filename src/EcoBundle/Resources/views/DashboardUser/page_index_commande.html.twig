{% extends 'base.html.twig' %}

{% block body %}

    {% if commandes|length >0 %}
        <h1> Mes Commandes : </h1>
    <div class="tab-content" >
        <div class="tab-pane active" id="users" aria-expanded="true">

                <table id="usersTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th> Date Emission </th>
                        <th> Etat </th>
                        <th> Prix Total </th>
                        <th> Détails </th>

                    </tr>
                    <tbody>
                    {% for value in commandes %}
                        {% if app.user.id == value.idUtilisateur %}
                        <tr>

                            <td>{{ value.dateEmission|date}}</td>
                            <td>{{ value.etatCommande }}</td>
                            <td>{{ value.prixTotal }}</td>
                            <td><a  href="{{ path('ligne_show',{ 'id_c': value.id  }) }}">Afficher les détails </a> </br>
                             <a  href="{{ path('annuler_commande',{ 'id_c': value.id  }) }}">Annuler Commande </a></td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>

        </div>
    </div>

    {% else %}
        <h1> Vous n'avez pas de commandes </h1>
    {% endif %}
{% endblock %}