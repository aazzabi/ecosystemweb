{% extends 'base.html.twig' %}
{% block body %}
    <div class="section-title" style="background:url({{ asset('img/slide/1.jpg') }})">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1>Newsletter Html view</h1>
                </div>

                <div class="col-md-4">
                    <div class="breadcrumbs">
                        <ul>
                            <li><a href="{{ path('homepage') }}">Home</a></li>
                            <li>NewsletterView</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Section Title -->

    <!-- Section Area - Content Central -->
    <section class="content-info">

    <div class="container paddings-mini">
        <div class="row">

            <div class="col-lg-12">
                <!-- Content Text-->
                <div class="panel-box">
                    <div class="titles text-center">
                        <h4>{{ newsletter.subject }}</h4>
                    </div>
                    <!-- Post Item -->
                    <div class="post-item">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                {{ newsletter.contenu | raw }}
                            </div>
                        </div>
                    </div>
                    <!-- End Post Item -->

                </div>
                <!-- End Content Text-->
            </div>
        </div>
    </div>
{% endblock %}