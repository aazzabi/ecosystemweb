<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic -->
    <meta charset="utf-8">
    <title>SportsCup - Bootstrap 4 Theme for Sports</title>
    <meta name="keywords" content="HTML5 Template"/>
    <meta name="description" content="SportsCup - Bootstrap 4 Theme for Sports">
    <meta name="author" content="iwthemes.com">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Theme CSS -->
    <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet" media="screen">

    <!-- Favicons -->
    <link rel="shortcut icon" href="{{ asset('img/icons/favicon.ico') }}">
    <link href="{{ asset('assetsBack/css/lib/toastr/toastr.min.css') }}" rel="stylesheet">

</head>

<body>

<!-- layout-->
<div id="layout">
    <!-- Header-->
    <header>
        <!-- End headerbox-->
        <div class="headerbox">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <!-- Logo-->
                    <div class="col">
                        <div class="logo">
                            <a href="index.html" title="Return Home">
                                <img src="{{ asset('img/logo.png') }}" alt="Logo" class="logo_img">
                            </a>
                        </div>
                    </div>
                    <!-- End Logo-->
                    <!-- Call Nav Menu-->
                    <a class="mobile-nav" href="#mobile-nav"><i class="fa fa-bars"></i></a>
                    <!-- End Call Nav Menu-->
                </div>
                <!-- End Adds Header-->
            </div>
        </div>
</div>
<!-- End headerbox-->
</header>
<!-- End Header-->

<!-- mainmenu-->
<nav class="mainmenu">
    <div class="container">
        <!-- Menu-->
        <ul class="sf-menu" id="menu">
            <li>
                <a href="#">Home</a>
            </li>
            <li>
                <a href="contact.html">Contact</a>
            </li>
        </ul>
        <!-- End Menu-->
    </div>
</nav>
<!-- End mainmenu-->

<!-- Mobile Nav-->
<div id="mobile-nav">
    <!-- Menu-->
    <ul>
        <li>
            <a href="#">Home</a>
        </li>
        <li>
            <a href="contact.html">Contact</a>
        </li>
    </ul>
    <!-- End Menu-->
</div>
<!-- End Mobile Nav-->

<!-- Section Title -->
<div class="section-title"
     style="background:url(http://www.makecovers.com/wp-content/uploads/2016/06/Mohamed-Salah-Facebook-Covers-12.png)">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>News not sidebar</h1>
            </div>

            <div class="col-md-4">
                <div class="breadcrumbs">
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li>Inner Page</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Section Title -->

<!-- Section Area - Content Central -->
<section class="content-info">

    <div class="container paddings-mini">
        <div class="row">

            <div class="col-lg-12">
                <!-- Content Text-->
                <div class="panel-box">
                    <div class="titles">
                        <h4>Recent News</h4>
                    </div>
                    <!-- Post Item -->
                    {% for article in articles %}
                        <div class="post-item">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="img-hover">
                                        <img src="{{ article.articleimage }}" alt="" class="img-responsive">
                                        <div class="overlay"><a
                                                    href="{{ path('articles_articlePage',{'year': article.datepublication | date('Y'),'month': article.datepublication | date('m'),'day': article.datepublication | date('d') ,'id': article.id }) }}">+</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <h5>
                                        <a href="{{ path('articles_articlePage',{'year': article.datepublication | date('Y'),'month': article.datepublication | date('m'),'day': article.datepublication | date('d') ,'id': article.id }) }}">{{ article.titre }}</a>
                                    </h5>
                                    <span class="data-info">January 3, 2014  / <i class="fa fa-comments"></i><a
                                                href="#">0</a></span>
                                    <span class="data-info">{{ article.datepublication | date('Y-m-d') }} / <i
                                                class="fa fa-comments"></i><a
                                                href="#">0</a></span>
                                    <p> {{ article.contenu|length > 5 ?(article.contenu | slice(0, 5) ~ '...' )| striptags : article.contenu | striptags }}
                                        .<a href="{{ path('articles_articlePage',{'year': article.datepublication | date('Y'),'month': article.datepublication | date('m'),'day': article.datepublication | date('d') ,'id': article.id }) }}">Read
                                            More [+]</a></p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <!-- End Post Item -->
                </div>
                <!-- End Content Text-->
            </div>
        </div>
    </div>
    <div class="row text-center">
        <h2>If you can't view this email ,please click this{% if catg is empty %} <a
                href="{{ path('subscribers_viewNewsWeb', {'catg' : 'General', 'number': number }) }}">link</a>
        {% else %}
            <a
                    href="{{ path('subscribers_viewNewsWeb', {'catg' : 'General', 'number': number }) }}">link</a>
            {% endif %}</h2>
    </div>
    <div class="row text-center">
        <h2>If you'd liek to unsubscribe from our mailing list, please click this button
            </button>
        </h2>
    </div>
</section>

<!-- footer Down-->
<div class="footer-down">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p>&copy; 2018 SportsCup . All Rights Reserved</p>
            </div>
        </div>
    </div>
</div>
<!-- footer Down-->
</div>
<!-- End layout-->

