<script type="text/javascript" src="{{ asset('assets/js/theme-main.js') }}"></script>

<!-- ======================= End JQuery libs =========================== -->
<script src="{{ asset('assetsBack/js/lib/toastr/toastr.min.js') }}"></script>
<!-- scripit init-->
<script src="{{ asset('assetsBack/js/lib/toastr/toastr.init.js') }}"></script>
<script>
    function unsub(elem) {
        var email = elem.id;
        $.ajax({
            url: '{{ (path('subscribers_unsub')) }}',
            type: "POST",
            data: {
                'email': email
            },
            async: true,
            success: function (data) {
                switch (data) {
                    case 'Unsubed':
                        toastr.success('You have successfully unsubbed from our mailing list', 'Top Right', {
                            timeOut: 5000,
                            "closeButton": true,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": true,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut",
                            "tapToDismiss": false
                        });
                        break;
                    default:
                        toastr.error('Error Message : ' + data, 'Top Right', {
                            "positionClass": "toast-top-right",
                            timeOut: 5000,
                            "closeButton": true,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": true,
                            "preventDuplicates": true,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut",
                            "tapToDismiss": false
                        });
                        break;

                }
            }
            , error: function (data) {
                toastr.error('Error Message : Your request coulndt be parsed', 'Top Right', {
                    "positionClass": "toast-top-right",
                    timeOut: 5000,
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": true,
                    "progressBar": true,
                    "preventDuplicates": true,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut",
                    "tapToDismiss": false
                })
            }
        });

    }
</script>
</body>
</html>
