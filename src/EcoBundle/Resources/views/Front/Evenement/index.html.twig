{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset ('assets/css/raniaEvt.css') }}" rel="stylesheet" type="text/css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
{% endblock %}

{% block body %}

    <br>
    {% if app.user %}
        <div class="row">
            <div class="col-md-10 text-right">
                <button class="btn btn-complete btn-cons " data-target="#collapseSearch" data-toggle="collapse"
                        href="collapseSearch" role="button"><i class="fa fa-filter" aria-hidden="true"></i> Appliquer un
                    filtre
                </button>
                <a href="{{ path('du_evenements_new') }}" class="btn btn-success">
                    <i class="icon-plus">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        &nbsp;Ajouter un évènement
                    </i>
                </a>
                <a href="{{ path('front_evenements_Best') }}" class="btn btn-info">
                    <i class="icon-star">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        &nbsp;Best
                    </i>
                </a>

            </div>
            <div class="col-md-10 offset-md-1">
                <br>
                <div class="collapse col-md-12" id="collapseSearch">
                    <form id="form-project" method="GET" role="form" autocomplete="off" novalidate="novalidate">
                        <div class="card card-body col-md-12" style="padding: 20px; width: 100%">
                            <h5 class="m-t-10">Filtrer selon:</h5>
                            <div class="form-group-attached">
                                <div class="row clearfix">
                                    {#Disponibilité#}
                                    <div class="col-sm-2">
                                        <div class="form-group form-group-default">
                                            <label>Catégorie</label>
                                            <select name="categorie" id="categorie"
                                                    class="cs-select cs-skin-slide cs-transparent form-control"
                                                    data-init-plugin="cs-select">
                                                <option value="0">Toutes</option>
                                                {% for c in categories %}
                                                    <option {% if app.session.get('categorie') == c.id %} selected {% endif %}
                                                            value="{{ c.id }}"> {{ c.libelle }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>

                                    </div>
                                    {#Experiences#}
                                    <div class="col-sm-2">
                                        <div class="form-group form-group-default">
                                            <label>Lieu </label>
                                            <input type="text" class="form-control" name="lieu" id="lieu"
                                                   value="{{ app.session.get('lieu') }}">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="input-group date form-input-group form-group-default" data-provide="datepicker" >
                                            <label>Date</label>
                                            <input data-date-format="mm/dd/yyyy" id="date"
                                                    class="form-control"
                                                    name="date">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 text-right">
                                        <input class="btn btn-secondary" type="submit">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    {% else %}
        <div class="row">
            <div class="col-md-10 text-right">
                <button class="btn btn-complete btn-cons " data-target="#collapseSearch" data-toggle="collapse"
                        href="collapseSearch" role="button"><i class="fa fa-filter" aria-hidden="true"></i> Appliquer unfiltre
                </button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    <i class="icon-plus">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        &nbsp;Ajouter un évènement
                    </i>
                </button>
                <a href="{{ path('front_evenements_Best') }}" class="btn btn-info">
                    <i class="icon-star">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        &nbsp;Best
                    </i>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <br>
                <div class="collapse col-md-12" id="collapseSearch">
                    <form id="form-project" method="GET" role="form" autocomplete="off" novalidate="novalidate">
                        <div class="card card-body col-md-12" style="padding: 20px; width: 100%">
                            <h5 class="m-t-10">Filtrer selon:</h5>
                            <div class="form-group-attached">
                                <div class="row clearfix">
                                    {#Disponibilité#}
                                    <div class="col-sm-2">
                                        <div class="form-group form-group-default">
                                            <label>Catégorie</label>
                                            <select name="categorie" id="categorie"
                                                    class="cs-select cs-skin-slide cs-transparent form-control"
                                                    data-init-plugin="cs-select">
                                                <option value="0">Toutes</option>
                                                {% for c in categories %}
                                                    <option {% if app.session.get('categorie') == c.id %} selected {% endif %}
                                                            value="{{ c.id }}"> {{ c.libelle }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>

                                    </div>
                                    {#Experiences#}
                                    <div class="col-sm-2">
                                        <div class="form-group form-group-default">
                                            <label>Lieu </label>
                                            <input type="text" class="form-control" name="lieu" id="lieu"
                                                   value="{{ app.session.get('lieu') }}">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="input-group date form-input-group form-group-default" data-provide="datepicker" >
                                            <label>Date</label>
                                            <input data-date-format="mm/dd/yyyy"
                                                   class="form-control"
                                                   name="date">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 text-right">
                                        <input class="btn btn-secondary" type="submit">
                                    </div>

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <i class="fa fa-exclamation fa-5x" style="color: red;margin: 0 auto;"></i>
                        <h5 class="modal-title" id="exampleModalLabel">Vous devez se connecter d'abord</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                        <a href="{{ path('inscription') }}">
                            <button class="btn btn-default btn-cons  btn-sm">S'inscrire</button>
                        </a>
                        <a href="{{ path('fos_user_security_login') }}">
                            <button type="button" class="btn btn-primary">Se connecter</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <br>


    <div class="row" id="eventsContent">
        {% for  evenement in evenements %}
            <div class="col-sm-4 offset-md-1">
                <ul class="event-list">
                    <li>
                        <time datetime="2014-07-31 1600">
                            <span class="day">{{ evenement.date |date ("d") }}</span>
                            <span class="month">{{ evenement.date |date ("M") }}</span>
                            <span class="year">{{ evenement.date |date ("Y") }}</span>
                            <span class="time">4:00 PM</span>
                        </time>

                        <time
                                {% if evenement.cover != '' %}
                                    style="filter: blur(1px); background-size: 120px 120px; background-image:url('{{ asset('uploads/evt/cover/' ~ evenement.cover) }}');"
                                {% else %}
                                    style="filter: blur(1px);background-size: 120px 120px; background-image:url('{{ asset('assets/img/profile.png') }}')"
                                {% endif %}
                                datetime="2014-07-31 1600">
                        </time>
                        <div class="info" style="padding: 0 10px;">
                            <div class="" data-social="item">
                                <div class="card-description" style="padding: 0px 0px;">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h3 style="font-size: 1vw; line-height: normal;"><a
                                                        href="{{ path('front_evenements_show', { 'id': evenement.id }) }}">{{ evenement.titre }}
                                                </a>

                                                <p>
                                        <span class="location semi-bold"> <i
                                                    class="fa fa-eye"></i>  </span>{{ evenement.nbvues }} <span>  </span><span class="location semi-bold"> <i
                                                                class="fa fa-users"></i>  </span> {{ evenement.participants|length}}
                                                </p>
                                            </h3>
                                        </div>
                                        <div class="col-md-2">
                                            <p><a href="#">#{{ evenement.categorie }}</a></p>
                                        </div>
                                        {#<div class="likeblock pull-left btn-group">#}
                                            {#<button id="like" type="submit" value="{{ evenement.id}}"#}
                                                    {#class="like btn up btn-tag-light btn-tag-rounded m-r-10 float-right">#}
                                                {#<i class="fa fa-thumbs-up" aria-hidden="true"></i>#}

                                            {#</button>#}
                                        {#</div>#}
                                    </div>
                                    {#<div class="row">#}
                                    <p>
                                        <span class="location semi-bold"> <i
                                                    class="fa fa-map-marker"></i> {{ evenement.lieu }}</span>
                                    </p>
                                    {#</div>#}
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="via">via {{ evenement.createdBy }}</div>
                                        </div>
                                        {% if app.user %}
                                            <div class="col-sm-3">
                                                <button id="participer" type="submit" value="{{ evenement.id}}"
                                                        class="confirmer{{ evenement.id }} btn participer btn-sm btn-info">
                                                    <i class="fa fa-smile-o" aria-hidden="true"></i>Je participe!
                                                </button>
                                                <button id="annuleParticiper" type="submit" value="{{ evenement.id}}"
                                                        class="annuler{{ evenement.id }} btn annuleParticiper btn-sm btn-info">
                                                    <i class="fa fa-thumbs-down" aria-hidden="true"></i>Je participe plus
                                                </button>
                                            </div>
                                        {% endif %}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        {% endfor %}
    </div>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(function () {
            $('#datePicker').datetimepicker();
        });

        $(".participer").click(function () {
            var id = $(this).val();

           // alert(id);
            $.ajax({
                dataType: "json",
                url: "{{ path("front_evenements_participer") }}",
                data: {
                    "id": id
                },
                error: function(response){
                    $(".confirmer"+id).hide();
                    $(".annuler"+id).show();
                    //  alert(".annuler"+id);
                },
                success: function(response){
                    $(".confirmer"+id).hide();
                    $(".annuler"+id).show();
                }});
        });

        $(".annuleParticiper").click(function () {
            var id = $(this).val();

            $.ajax({
                dataType: "json",
                url: "{{ path("front_evenements_noparticiper") }}",
                data: {
                    "id": id
                },
                error: function(response){
                    $(".annuler"+id).hide();
                    $(".confirmer"+id).show();
                },
                success: function(response){
                    $(".annuler"+id).hide();
                    $(".confirmer"+id).show();
                }});
        });
    </script>
    <script src="{{ asset('assets/js/jquery.js') }}" type="text/javascript"></script>
{% endblock %}

