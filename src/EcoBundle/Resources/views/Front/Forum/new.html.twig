{% extends 'base.html.twig' %}
{% block title %}
    Ajout d'une nouvelle catégorie de publication
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap-tagsinput.css') }}">
    <style>
        .card-block {
            padding: 10px;
        }

        .card-title {
            margin-bottom: 0px;
        }
        .publicationDescription {
            width: 100%;
            height: 200px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/bootstrap-tagsinput.js') }} "></script>
    <script src="{{ asset('assets/js/typeahead.js') }} "></script>
    <script src="{{ asset('assets/js/competences.js') }} "></script>
{% endblock %}

{% block body %}
    <br>
        {{ form_start(formPublication) }}
        <div class="row">
            <div class="col-md-5 offset-md-2">
                <h1><b>Nouvelle publication</b></h1>
            </div>
            <div class="col-md-3 text-right">
                <br>
                <button type="submit" class="btn btn-success" value="Create">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Confirmer
                </button>
                <a href="{{ path('front_forum_index') }}" class="btn btn-secondary">
                    <i class="fa fa-undo" aria-hidden="true"></i>
                    Retour à la liste</a>

                <br>
            </div>
        </div>
    <hr>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            {% form_theme formPublication 'bootstrap_3_layout.html.twig' %}
            {{ form_widget(formPublication) }}
            {{ form_end(formPublication) }}
        </div>
    </div>
{% endblock %}