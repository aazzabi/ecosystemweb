                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>#}
                                  {% if app.user  and  not( app.user in  evenement.participants ) %}

                   <div class="col-sm-5">
                       <a href="{{ path('front_evenements_participer' ,{ 'id' : evenement.id }) }}"
                       class="btn btn-sm btn-info"   id="yes">
                           <i class="fa fa-recycle" aria-hidden="true"></i>&nbsp;
                         PARTICIPER
                       </a>
                       </div>



               {% endif %}

               {% if app.user  and  ( app.user in  evenement.participants ) %}
                   <div class="col-sm-5">

                       <a href="{{ path('front_evenements_noparticiper' ,{ 'id' : evenement.id }) }}"
                          class="btn btn-xs btn-info"   id="no">
                           <i class="fa fa-remove" aria-hidden="true"></i>&nbsp;
                          ANNULER PARTICIPATION
                       </a>

                   </div>

               {% endif %}
                                <label for={{ evenement.id }}, class="button" aria-hidden="true">
                                <a style="font-size: 1.5vw; line-height: normal;">
                                      <p>Détails :</p>
                                    </a>
                                </label>
                            </div>
                        </div>
                        <div class="back">
                            <div class="inner">
                                <div class="info">
                                    <span>{{ evenement.participants|length}}</span>
                                    <div class="icon">
                                        <i class="fas fa-users"></i>
                                        <span>Participants</span>
                                    </div>
                                </div>
                                <div class="info">
                                    <span>{{ evenement.objectif}}</span>
                                    <div class="icon">
                                        <i class="fas fa-object-group"></i>
                                        <span>Objectif</span>
                                    </div>
                                </div>
                                <div class="info">
                                    <span>{{ evenement.atteint }}</span>
                                    <div class="icon">
                                        <i class="fas fa-object-ungroup"></i>
                                        <span>Atteint</span>
                                    </div>
                                </div>
                                <div class="info">
                                    <span>
                                        <div class="icon">
                                    <time datetime="2014-07-31 1600">
                                        <span class="day">{{ evenement.dateLimite |date ("d") }}</span>
                                        <span class="month">{{ evenement.dateLimite |date ("M") }}</span>
                                        <span class="year">{{ evenement.dateLimite |date ("Y") }}</span>
                                        <span class="time">4:00 PM</span>
                                    </time></div></span>
                                    <div class="icon">
                                        <i class="fas fa-calendar-times-o"></i>
                                        <span>Date limite</span>
                                    </div>
                                </div>
                                <div class="description">
                                    <p>Categorie : <a href="#">{{ evenement.categorie }}</a></p>
                                      <a style="font-size: 1.5vw; line-height: normal;">
                                     <p>Description :</p>
                                    </a>

                                    <br>

                                    {{ evenement.description }}
                                </div>
                                <div class="location">
                                    <p>Lieu : <a href="#">{{ evenement.lieu }}</a></p>
                                    <div class="icon">
                                        <i class="fas fa-location-arrow"></i>

                                    </div>
                                </div>

                                <div class="date">
                                    <time datetime="2014-07-31 1600">
                                        <span class="day">{{ evenement.date |date ("d") }}</span>
                                        <span class="month">{{ evenement.date |date ("M") }}</span>
                                        <span class="year">{{ evenement.date |date ("Y") }}</span>
                                        <span class="time">4:00 PM</span>
                                    </time></div>
                                     <div class="icon">
                                        <i class="fas fa-calendar"></i>

                                    </div>

                                <label for={{ evenement.id }},   class="button return" aria-hidden="true">
                                    <i class="fas fa-arrow-left"></i>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
































