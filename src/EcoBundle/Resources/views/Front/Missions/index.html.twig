                                <div class="row">
                                    <div class="col-md-8">
                                        <h3 style="font-size: 2.5vw; line-height: normal;"><a
                                                    href="{{ path('front_evenements_show', { 'id': evenement.id }) }}">{{ evenement.titre }}
                                            </a>
                                            <p>
                                        <span class="location semi-bold"> <i
                                                    class="fa fa-eye"></i>  </span>Nombre de vues : {{ evenement.nbvues }}
                                            </p>
                                        </h3>
                                    </div>
                              <div class="col-md-5">
                   <div class="via">via {{ evenement.createdBy }}</div>
               </div>




                                </div>

