{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset ('assets/css/raniaEvt.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset ('assets/css/missionCarts.css') }}" rel="stylesheet" type="text/css">

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
{% endblock %}

{% block body %}

    <br>
    {% if app.user %}
        <div class="row">
            <div class="col-md-10 offset-md-1 text-right">
                <button class="btn btn-complete btn-cons " data-target="#collapseSearch" data-toggle="collapse"
                        href="collapseSearch" role="button"><i class="fa fa-filter" aria-hidden="true"></i> Appliquer un
                    filtre
                </button>
                <a href="{{ path('du_evenements_new') }}" class="btn btn-success">
                    <i class="icon-plus">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        &nbsp;Ajouter une mission
                    </i>
                </a>
            </div>
            <div class="col-md-10 offset-md-1">
                <br>
                <div class="collapse col-md-12" id="collapseSearch">
                    <form id="form-project" method="GET" role="form" autocomplete="off" novalidate="novalidate">
                        <div class="card card-body col-md-12" style="padding: 20px; width: 100%">
                            <h5 class="m-t-10">Filtrer selon:</h5>
                            <div class="form-group-attached">
                                <div class="row clearfix">
                                    {#Disponibilité#}
                                    <div class="col-sm-2">
                                        <div class="form-group form-group-default">
                                            <label>Catégorie</label>
                                            <select name="categorie" id="categorie"
                                                    class="cs-select cs-skin-slide cs-transparent form-control"
                                                    data-init-plugin="cs-select">
                                                <option value="0">Toutes</option>
                                                {% for c in categories %}
                                                    <option {% if app.session.get('categorie') == c.id %} selected {% endif %}
                                                            value="{{ c.id }}"> {{ c.libelle }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>

                                    </div>
                                    {#Experiences#}
                                    <div class="col-sm-2">
                                        <div class="form-group form-group-default">
                                            <label>Lieu </label>
                                            <input type="text" class="form-control" name="lieu" id="lieu"
                                                   value="{{ app.session.get('lieu') }}">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="input-group date form-input-group form-group-default" data-provide="datepicker" >
                                            <label>Date</label>
                                            <input data-date-format="mm/dd/yyyy"
                                                    class="form-control"
                                                    name="date">
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">

                                        <form class="m-t-5" role="form">
                                            <div class="form-group form-group-default form-group-default-select2">
                                                <label> Mots clés :</label>
                                                <select class=" full-width" data-init-plugin="select2" multiple>
                                                    <option value="Nettoyage">Nettoyage</option>
                                                    <option value="Don">Don</option>
                                                    <option value="NonLucratif">Non Lucratif</option>
                                                    <option value="Lucratif">Lucratif</option>
                                                    <option value="CollecteFond">Collecte de fonds</option>
                                                    <option value="Sensibilisation">Sensibilisation</option>

                                                </select>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-sm-2 text-right">
                                        <input class="btn btn-secondary" type="submit">
                                    </div>

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    {% else %}
        <div class="row">
            <div class="col-md-3 offset-md-7 text-right ">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    <i class="icon-plus">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        &nbsp;Ajouter une mission
                    </i>
                </button>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <i class="fa fa-exclamation fa-5x" style="color: red;margin: 0 auto;"></i>
                            <h5 class="modal-title" id="exampleModalLabel">Vous devez étre connecté avant d'effectuer cette action ! </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <a href="{{ path('inscription') }}">
                                <button class="btn btn-default btn-cons  btn-sm">S'inscrire</button>
                            </a>
                            <a href="{{ path('fos_user_security_login') }}">
                                <button type="button" class="btn btn-primary">Se connecter</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <br>















    <div class="row">




        {% set i = 0 %}
        {% for  evenement in evenements %}
            <div class="wrapper">

                {#<span le variable i represente le numero du card  {{ cardnb }}#}

                {% set i = i +  1 %}

                {% set cardnb = "card" ~ i   %}
                <pre>
    {{ dump(cardnb) }}
</pre>
                <div class="card">



