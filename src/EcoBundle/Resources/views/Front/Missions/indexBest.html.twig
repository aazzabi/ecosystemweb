{% block javascripts %}
    <script src="{{ asset('assets/js/jquery.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#datePicker').datetimepicker();
        });

        $(".participer").click(function () {
            var id = $(this).val();

            alert(id);
            $.ajax({
                dataType: "json",
                url: "{{ path("front_missions_participer") }}",
                data: {
                    "id": id
                },
                error: function(response){
                    $(".confirmer"+id).hide();
                    $(".annuler"+id).show();
                    //  alert(".annuler"+id);
                },
                success: function(response){
                    $(".confirmer"+id).hide();
                    $(".annuler"+id).show();
                }});
        });

        $(".annuleParticiper").click(function () {
            var id = $(this).val();

            alert(id);
            $.ajax({
                dataType: "json",
                url: "{{ path("front_missions_noparticiper") }}",
                data: {
                    "id": id
                },
                error: function(response){
                    $(".annuler"+id).hide();
                    $(".confirmer"+id).show();
                    // alert(".confirmer"+id);
                },
                success: function(response){
                    $(".annuler"+id).hide();
                    $(".confirmer"+id).show();
                }});
        });




