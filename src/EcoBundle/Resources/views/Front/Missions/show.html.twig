{% extends 'base.html.twig' %}

{% block title %}
    Détails d'une mission selectionné
{% endblock %}
{% block stylesheets %}
    <style>
        .jumbotron {
            height: 100vh;
            padding: 0px;
            width: 100%;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="jumbotron" data-social="cover" data-pages="parallax" data-scroll-element=".page-container">
        <div class="cover-photo" style="background-image:url('{{ asset('uploads/missions/cover/' ~ evenement.cover  ) }}'); transform: translateY(0px);">
            {% if evenement.cover != '' %}
                <img alt="User Pic"
                     src="{{ asset('uploads/missions/cover/'  ~ evenement.cover) }}"
                     class="img-circle img-responsive">
            {% else %}
                <img alt="User Pic" src="{{ asset('assets/img/profile.png') }}"
                     id="profile-image1" class="img-circle img-responsive">
            {% endif %}
        </div>
        <div class=" container    container-fixed-lg sm-p-l-0 sm-p-r-0">
            <div class="inner" style="transform: translateY(0px); opacity: 1;">
                <div class="pull-bottom bottom-left m-b-40 sm-p-l-15">
                    <h5 class="text-white no-margin">Détails sur la mission </h5>
                    <h1 class="text-white no-margin"><span class="semi-bold">{{ evenement.titre }}</span> </h1>
                    <h5 class="text-white no-margin">une Mission de <span> {{ evenement.categorie.libelle }}</span></h5>


                    <div class="row">
                        <div class="card">
                            <div class="row">

                                <aside class="col-sm-7">
                                    <article class="card-body p-5">
                                        <h3 class="title mb-3"></h3>

                                        <dl class="item-property">
                                            <dt>Description : </dt>
                                            <dd><p> {{ evenement.description }}</p></dd>
                                        </dl>
                                        <dl class="param param-feature">
                                            <dt>Lieu : </dt>
                                            <dd>{{ evenement.lieu }}</dd>
                                        </dl>  <!-- item-property-hor .// -->
                                        <dl class="param param-feature">
                                            <dt>Objectif à atteindre : </dt>
                                            <dd>{{ evenement.objectif }}</dd>
                                        </dl>
                                        <dl class="param param-feature">
                                            <dt>Materiaux collectés : </dt>
                                            <dd>{{ evenement.atteint }}</dd>
                                        </dl>
                                        <dl class="param param-feature">
                                            <dt>Date</dt>
                                            <dd>{{ evenement.date |date }}</dd>
                                        </dl>  <!-- item-property-hor .// -->
                                        <dl class="param param-feature">
                                            <dt>Date Limite : </dt>
                                            <dd>{{ evenement.dateLimite |date }}</dd>
                                        </dl>  <!-- item-property-hor .// -->
                                        <dl class="param param-feature">
                                            <dt>Crée Par:</dt>
                                            <dd> {{ evenement.createdBy }}</dd>
                                        </dl>
                                        <dl class="param param-feature">
                                            <dt>Nombre de participants:</dt>
                                            <dd> {{ evenement.participants |length }}</dd>
                                        </dl>
                                        <dl class="param param-feature">
                                            <dt>Participants</dt>
                                            <dd>  {% for participant in evenement.participants %}
                                                    <td>{{ participant.nom }}</td>
                                                    <td>{{ participant.photo }}</td>

                                                {% endfor %}
                                                <td></td>
                                            </dd>
                                        </dl>





                                    </article> <!-- card-body.// -->
                                </aside>
                                <!-- col.// -->
                            </div> <!-- row.// -->
                        </div> <!-- card.// -->
                    </div>

