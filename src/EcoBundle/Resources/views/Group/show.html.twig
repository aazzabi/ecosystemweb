{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1><b>{{ group.name }}</b></h1>
        </div>
        <div class="col-md-6 text-right">
            <br>
            <a class="btn btn-secondary" href="{{ path('group_edit', { 'id': group.id }) }}">
                <i class="fa fa-pencil-square-o"></i> Edit</a>
            <button type="button" class="btn btn-danger btn_lg" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-times" aria-hidden="true"></i>Supprimer
            </button>
            <a class="btn btn-secondary" href="{{ path('group_index') }}">
                <i class="fa fa-undo" aria-hidden="true"></i> Retour à la liste
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="" >
                <div class="">
                    <div class="" >
                        <h4>
                            À propos ce groupe :
                        </h4>
                    </div>
                    <div class="" >
                        <div class="">
                            {% if group.name  %}
                                <div class="row">
                                    <div class="col-md-3">
                                        Nom :
                                    </div>
                                    <div class="col-md-9">
                                        {{  group.name  }}
                                    </div>
                                </div>
                            {% endif %}
                            {% if group.description %}
                                <div class="row">
                                    <div class="col-md-3">
                                        Description :
                                    </div>
                                    <div class="col-md-9">
                                        {{  group.description  }}
                                    </div>
                                </div>
                            {% endif %}
                            {% if group.type %}
                                <div class="row">
                                    <div class="col-md-3">
                                        Group :
                                    </div>
                                    <div class="col-md-9">
                                        {{ group.type }}
                                    </div>
                                </div>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    {{ form_start(delete_form) }}
    <!--Début du modal-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"
                        id="exampleModalLabel"> Supprimer
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiement supprimer ce profile ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary"
                            data-dismiss="modal"> Annuler
                    </button>
                    <input type="submit" class="btn btn-danger btn_lg" value="Supprimer">
                    {{ form_end(delete_form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
