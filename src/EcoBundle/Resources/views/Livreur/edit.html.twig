{% extends 'base.html.twig' %}

{% block title %}
    Modification d'un livreur
{% endblock %}
{% block body %}
    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-6">
            <h1><b>Modification d'un livreur </b></h1>
        </div>
        <div class="col-md-6 text-right">
            <br>
            <button type="submit" class="btn btn-success" value="Create">
                <i class="fa fa-check" aria-hidden="true"></i>Confirmer
            </button>
            <a href="{{ path('users_index') }}" class="btn btn-secondary">
                <i class="fa fa-undo" aria-hidden="true"></i>Retour Ã  la liste</a>
            <button type="button" class="btn btn-danger btn_lg" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-times" aria-hidden="true"></i> Supprimer
            </button>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            {% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
            {{ form_widget(edit_form) }}
            {{ form_end(edit_form) }}
        </div>
    </div>
    {{ form_start(delete_form) }}

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> Supprimer
                    </h5>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiement supprimer ce livreur ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal"> Annuler
                    </button>

                    <input class="btn btn-danger btn_lg" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
