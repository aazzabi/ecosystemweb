{% extends './Default/dashboard.html.twig' %}
{% block title %}
    Liste des utilisateurs
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var table = $('#profiles').DataTable({
                "paging": true,
                "scrollX": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });

            table.columns().every(function (index) {
                var visible = this.visible();
                $('.toggle-vis').eq(index).prop('checked', visible);
            });

            $('.toggle-vis').on('change', function (e) {
                e.preventDefault();
                // Get the column API object
                var column = table.column($(this).attr('data-column'));
                // Toggle the visibility
                column.visible(!column.visible());
            });

        });

    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Liste des utilisateurs</b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="{{ path('users_new') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter un utilisateur
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">
                <ul class="nav nav-tabs nav-tabs-simple hidden-sm-down" role="tablist"
                    data-init-reponsive-tabs="dropdownfx">
                    <li class="nav-item">
                        <a class="active" data-toggle="tab" role="tab" data-target="#datatables" href="#"
                           aria-expanded="true">DataTables</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" data-toggle="tab" role="tab" data-target="#cardsUsers" class=""
                           aria-expanded="false">Cards</a>
                    </li>
                </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="datatables" aria-expanded="true">
                    <table id="users" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Nom - Prenom</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Société</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.nom|upper }} {{ user.prenom }} </td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {#<a href="{{ path('group_show', { 'id': user.group.id }) }}">#}
                                        {#<div id="profile-image1">#}
                                        {#{% if user.group.logo != '' %}#}
                                        {#<img alt="User Pic"#}
                                        {#src="{{ asset('uploads/logo/' ~ user.group.logo) }}"#}
                                        {#id="profile-image1"#}
                                        {#class="img-logo-societe img-responsive">#}
                                        {#{% else %}#}
                                        {#<b>{{ user.group.name }}</b>#}
                                        {#{% endif %}#}

                                        {#</div>#}
                                    {#</a>#}
                                </td>
                                <td>
                                    {% for role in user.roles %}
                                        {{ role }} <br>
                                    {% endfor %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm btn-group-horizontal">
                                        <a class="btn btn-secondary"
                                           href="{{ path('users_edit', { 'id': user.id }) }}"
                                           data-toggle="tooltip" title="Editer l'utilisateur">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="cardsUsers" aria-expanded="false">
                    <div class="row">
                        <div class="col-lg-12">

                            {% for user in users %}
                                <div class="card social-card share  col1" data-social="item"
                                     style="margin-left: 15px;">
                                    <div class="circle" data-toggle="tooltip" title="" data-container="body"
                                         data-original-title="Label">
                                    </div>
                                    <div class="card-header clearfix">
                                        <div class="user-pic">
                                            <img alt="Profile Image" width="33" height="33"
                                                 src="{{ asset('assets/img/profiles/avatar.jpg') }}">
                                        </div>
                                        <div><h5>{{ user.nom|upper }} {{ user.prenom }} </h5>
                                            <h6>@{{ user.username }}</h6>
                                        </div>
                                            <span class="location semi-bold"><i
                                                        class="fa fa-map-marker"></i> {{ user.email }}</span>

                                    </div>
                                    <div class="card-description">
                                        <p>What you think, you become. What you feel, you attract. What you
                                            imagine, you create - Buddha. <a href="#">#quote</a></p>
                                        <div class="via">
                                            <a class="btn btn-default btn-cons"
                                               data-placement="right"
                                               href="{{ path('users_edit', { 'id': user.id }) }}"
                                               data-toggle="tooltip" title="Editer l'utilisateur">
                                                <i class="fa fa-pencil-square-o"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
